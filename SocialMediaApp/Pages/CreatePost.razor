@page "/create"

@using SocialMediaApp.Models
@using SocialMediaApp.Services
@inject PostService PostService
@code {
    private string title;
    private string content;

    private async Task SubmitPost()
    {
        var result = await PostService.CreatePost(new Post { Title = title, Content = content });
        if (result) Console.WriteLine("Post created successfully!");
    }
}

<h3>Create Post</h3>
<input @bind="title" placeholder="Title" />
<textarea @bind="content" placeholder="Content"></textarea>
<button @onclick="SubmitPost">Submit</button>
